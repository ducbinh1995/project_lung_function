<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.hust.soict.lung_function.LungFunctionActivity"
    android:background="@drawable/bg_profile_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical"
                android:hint="@string/hint_fullname"
                android:textColor="@color/text_content"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical"
                android:hint="@string/hint_email"
                android:textColor="@color/text_content"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSeeHistory"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_icon_patient"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="Xem lịch sử đo"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/White"/>

            <Button
                android:id="@+id/btnUnfollow"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_icon_patient"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="Bỏ theo dõi"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/White"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
